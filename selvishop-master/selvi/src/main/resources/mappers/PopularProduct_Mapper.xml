<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="selvishop">

	<!-- 페이징 -->
	<select id="popular_product_paging" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
            select * from product where prdt_idx_pk >= ${start_page} and prdt_idx_pk <= ${end_page}
        ]]>
	</select>

	<!-- 상품 전체 갯수 -->
	<select id="popular_product_total_count" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
           select count(*) as cnt from product 
        ]]>
	</select>

	<!-- 높은 가격순 정렬 -->
	<select id="popular_product_sort_high_price" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
           select * from product order by prdt_price
        ]]>
	</select>

	<!-- 낮은 가격순 정렬 -->
	<select id="popular_product_sort_low_price" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
           select * from product order by prdt_price desc
        ]]>
	</select>

	<!-- 최신순 정렬 -->
	<select id="popular_product_sort_latest" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
           select * from product order by prdt_price
        ]]>
	</select>

	<!-- 인기순 정렬 -->
	<select id="popular_product_sort_popularity" parameterType="hashmap"
		resultType="hashmap">
        <![CDATA[
           select * from product order by prdt_price
        ]]>
	</select>

</mapper>